<h1>New Game</h1>

<div>
  <% @letters.each do |letter| %>
  <div class="letters"><%=  letter.upcase %></div>
  <% end  %>
</div>

<div class="form">
  <p>What the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="Type a word">
    <input type="submit" value="Play" class="btn" >
  </form>
</div>
